@page "/login"
@inherits LoginBase

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Авторизація</h1>
        <EditForm Model="@LoginData" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <label for="username">UserName</label>
            <InputText id="username" @bind-Value="LoginData.UserName" class="form-control"/>
            <label for="password">Password</label>
            <InputText id="password" @bind-Value="LoginData.Password" class="form-control" />       
            <p class="my-4 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </p>
        </EditForm>
    </div>
</div>
